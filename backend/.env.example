PORT=8080
NODE_ENV=production
LOG_LEVEL=info

# MongoDB
MONGODB_URI=mongodb://root:password@host:27017
MONGODB_DB=huaban

# S3 compatible object storage (Sealos bucket)
S3_ENDPOINT=objectstorageapi.bja.sealos.run
S3_REGION=us-east-1
S3_BUCKET=your-bucket
S3_ACCESS_KEY_ID=access-key
S3_SECRET_ACCESS_KEY=secret-key
S3_FORCE_PATH_STYLE=true

# Presign settings
PRESIGN_EXPIRES_S=600
IMAGES_PREFIX=public/images/
GALLERY_PREFIX=public/videos/
AUDIO_PREFIX=private/audio/

# CORS (comma separated origins). Empty to disable CORS.
CORS_ORIGINS=

# Provider (Volcengine Ark / Doubao)
ARK_API_KEY=replace-with-ark-api-key
ARK_BASE_URL=https://ark.cn-beijing.volces.com
VIDEO_MODEL=doubao-seedance-1-0-pro-250528
TEXT_MODEL=doubao-1-5-pro-256k-250115
ARK_CALLBACK_URL=

# STT (Volcengine OpenSpeech BigModel AUC)
STT_BASE_URL=https://openspeech.bytedance.com
STT_APP_ID=your-app-id
STT_ACCESS_TOKEN=your-access-token
STT_RESOURCE_ID=volc.bigasr.auc
